doctype
html
    head
        meta(charset="utf-8")
    body
    a(href='/statistic' style='border: 2px solid black; padding: 10px') Statistic Page
include add.pug
div
        table(style='width:100%', border='1')
         tr
          th Product Name
          th Category
          th Price
          th Summary
          th Edit/Delete product
         tr
         tr
          each val in list
           td=val.name
           td=val.category
           td=val.price
           td=val.summary
           td(style='display:flex') 
             form(action=`/edit/${JSON.stringify(val)}` method='post' style='padding-left:10px')
               input(type='submit' value='Edit')
             form(action=`/delete/${val.id}` method='post' style='padding-left:10px')
               input(type='submit' value='Delete')
           tr